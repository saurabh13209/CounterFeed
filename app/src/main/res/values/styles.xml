<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/NavigationColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NavigationColor" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="android:colorControlNormal">@color/NavigationIcon</item>
    </style>

    <style name="LaunchProduct" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#FFFFFF</item>
    </style>
</resources>
